<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="img/favicon.png">
    <link rel="stylesheet" href="css/cropsInfoStyle.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Document</title>
</head>

<body>


    <!-- BOTTOM NAV -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
        <div class="container">
            <a class="navbar-brand" href="#">AgroCatalysts</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log out</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- Weather API -->
    <div class="container-fluid p-3">
        <div class="text-center">
            <%= whe.temp %> <br>
                <%= whe.cond %>
        </div>
        <div class="text-center">
            <img src="<%= whe.iurl %>" alt="">
        </div>

    </div>
    <!-- cards part-->
    <h3 style="text-align: center;">Crops Available in <%= cityName %> are </h3>
    <section class="wrapper">
        <div class="container-fostrap">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <% for(let i=0;i<crops.length;i++){ %>
                            <div class="col-xs-12 col-sm-4">
                                <div class="card">
                                    <a class="img-card" href="">
                                        <img src="img/<%= crops[i].name %>.jpg" />
                                    </a>
                                    <% let isProduct = (Number(crops[i].month) - (Number(new Date().getMonth())+1)  ); %>
                                    <div class="card-content">
                                        <h6 class="card-title">
                                            <% if(isProduct>=0 && isProduct<=3){ %>
                                            <div class="d-flex justify-content-between text-danger">
                                                <a>
                                                    <%= crops[i].name %>
                                                </a>
                                                <p>
                                                    MSP- Rs. <%= crops[i].msp %>/-
                                                </p>
                                            </div>
                                            <% } else{ %>
                                                <div class="d-flex justify-content-between">
                                                    <a>
                                                        <%= crops[i].name %>
                                                    </a>
                                                    <p>
                                                        MSP- Rs. <%= crops[i].msp %>/-
                                                    </p>
                                                </div>
                                            <% } %>
                                        </h6>
                                        <div>
                                            <div class="my-1">
                                                <a class="btn btn-light size" data-bs-toggle="collapse"
                                                    href="#<%= crops[i].name %>" role="button" aria-expanded="false"
                                                    aria-controls="collapseExample">
                                                    Introduction
                                                </a>
                                                <div class="collapse" id="<%= crops[i].name %>">
                                                    <div class="card card-body">
                                                        <%= crops[i].introduction %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="my-1">
                                                <a class="size btn btn-light " data-bs-toggle="collapse"
                                                    href="#<%= crops[i].name.split(' ')[0] %>-soil" role="button"
                                                    aria-expanded="false" aria-controls="collapseExample">
                                                    Soil
                                                </a>
                                                <div class="collapse" id="<%= crops[i].name.split(' ')[0] %>-soil">
                                                    <div class="card card-body">
                                                        <%= crops[i].soil %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="my-1">
                                                <a class="btn btn-light size" data-bs-toggle="collapse"
                                                    href="#<%= crops[i].name.split(' ')[0] %>-sowing" role="button"
                                                    aria-expanded="false" aria-controls="collapseExample">
                                                    Sowing
                                                </a>
                                                <div class="collapse" id="<%= crops[i].name.split(' ')[0] %>-sowing">
                                                    <div class="card card-body">
                                                        <%= crops[i].sowing %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="my-1">
                                                <a class="btn btn-light size" data-bs-toggle="collapse"
                                                    href="#<%= crops[i].name.split(' ')[0] %>-fert" role="button"
                                                    aria-expanded="false" aria-controls="collapseExample">
                                                    Fertilizers
                                                </a>
                                                <div class="collapse" id="<%= crops[i].name.split(' ')[0] %>-fert">
                                                    <div class="card card-body">
                                                        <%= crops[i].fertilizers %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="my-1">
                                                <a class="btn btn-light size" data-bs-toggle="collapse"
                                                    href="#<%= crops[i].name.split(' ')[0] %>-weed" role="button"
                                                    aria-expanded="false" aria-controls="collapseExample">
                                                    Weed Management
                                                </a>
                                                <div class="collapse" id="<%= crops[i].name.split(' ')[0] %>-weed">
                                                    <div class="card card-body">
                                                        <%= crops[i].weed_management %>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="my-1">
                                                <a class="btn btn-light size" data-bs-toggle="collapse"
                                                    href="#<%= crops[i].name.split(' ')[0] %>-yield" role="button"
                                                    aria-expanded="false" aria-controls="collapseExample">
                                                    Yield->
                                                </a>
                                                <div class="collapse" id="<%= crops[i].name.split(' ')[0] %>-yield">
                                                    <div class="card card-body">
                                                        <%= crops[i].yield %>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="my-1 d-flex justify-content-center">
                                                <a class="btn btn-outline-success mx-1"
                                                    href="crops/add/<%= crops[i].name %>">Harvest</a>
                                                <a class="btn btn-outline-success mx-1"
                                                    href="crop/<%= crops[i].name%>">Schedule </a>
                                            </div>



                                        </div>

                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>

</body>

</html>